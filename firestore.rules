
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    // Admins can read and write any user document.
    // Non-admin users can only read/write their own document.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
      allow list: if request.auth.token.admin == true;
    }

    match /referralCodes/{code} {
      allow read, write: if isSignedIn();
    }

    match /referrals/{referralId} {
      allow read, write: if isSignedIn();
    }

    match /leads/{leadId} {
      // Allow anyone to create a lead (for the lander form)
      allow create: if true;
      // Only signed-in users (i.e., admins) can read, update, or delete leads
      allow read, update, delete: if request.auth.token.admin == true;
    }

    match /courses/{courseId} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }
    
    match /enrollments/{enrollmentId} {
      allow read, write: if isSignedIn();
    }

    match /payouts/{payoutId} {
      allow read, write: if request.auth.token.admin == true;
    }

    match /metadata/{document} {
      allow read, write: if isSignedIn();
    }

    // Fallback rule for any other collections
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
